<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/food_image_cardView"
            android:layout_width="70dp"
            android:layout_height="69dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="3600dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/food_item_imageView"
                android:layout_width="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/burger" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/food_item_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Food Item Name"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/food_image_cardView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/list_type_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Dish"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/food_image_cardView"
            app:layout_constraintTop_toBottomOf="@+id/food_item_name_textView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>